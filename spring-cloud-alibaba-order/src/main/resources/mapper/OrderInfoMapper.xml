<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.order.mapper.OrderInfoMapper">
    <resultMap id="dataMap" type="com.example.common.model.OrderInfo">
        <id property="orderId" column="order_id" jdbcType="INTEGER"/>
        <result property="goodsId" column="goods_id" jdbcType="INTEGER"/>
        <result property="goodsName" column="goods_name" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="list" resultMap="dataMap">
        select order_id,goods_id,goods_name from tb_order_info
    </select>

    <insert id="createBatch" parameterType="java.util.List">
      insert into tb_order_info(order_id,goods_id,goods_name)
      values (#{orderId},#{goodsId,#{goodsName})
        <foreach item="item" collection="list" separator="," index="index">
            (
                #{item.orderId},#{item.goodsId},#{item.goodsName}
            )
        </foreach>
    </insert>

</mapper>